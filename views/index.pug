extends layout

block content
  div#header
    h1
      a(href="/") CHEAT
    h1 STEI ITB 2019
  img#logo(src="img/logoregis-small-white.png")
  include ./search-form.pug
  div.container
    div.movie
      p Short Aftermovie
      video#v-short(controls playsinline poster="images/IMG_0243.JPG")
        source(src="videos/aftermovie-short.mp4" type="video/mp4" size="540")
    div.movie
      p Long Aftermovie
      video#v-long(controls playsinline poster="images/IMG_0243.JPG")
        source(src="videos/aftermovie-long.mp4" type="video/mp4" size="540")
  div.gallery-stei
    ul#lightgallery
      each image in images
        li(data-src=`thumb/${image}/25` full=`images/${image}`)
          a(href)
            img.placeholder(data-src=`thumb/${image}` src=`img/placeholder.jpg`)
