extends layout

block content
  div#header
    h1
      a(href="/") CHEAT
    h1 STEI ITB 2019
  img#logo(src="img/logoregis-small-white.png")
  #search-form
    p Search with your face
    form(action="/search" enctype="multipart/form-data" method="post")
      input(type="file" name="ref")
      input(type="submit" value="Upload")
  div.container
    p Aftermovie
    video(controls playsinline poster="images/IMG_0243.JPG")
      source(src="videos/aftermovie540.mp4" type="video/mp4" size="540")
  div.gallery-stei
    ul#lightgallery
      each image in images
        li(data-src=`thumb/${image}/25` full=`images/${image}`)
          a(href)
            img.placeholder(data-src=`thumb/${image}` src=`img/placeholder.jpg`)
